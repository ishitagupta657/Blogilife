<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %> - Blogilife</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    
 
    <div class="blog-detail">
      <div class="blog-header">
        <h1 class="blog-detail-title"><%= blog.title %></h1>
        <div class="blog-meta text-center">
          <div class="blog-author d-inline-flex align-items-center">
            <img src="<%= blog.createdBy?.profileImageURL || '/images/avatar.png' %>" 
                 alt="Author" class="author-avatar me-3">
            <div class="text-start">
              <h5 class="mb-1"><%= blog.createdBy?.fullName || 'Anonymous' %></h5>
              <small class="text-muted">
                <i class="fas fa-calendar me-1"></i>
                <%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                }) %>
              </small>
            </div>
          </div>
        </div>
      </div>
      
      
      <div class="text-center mb-5">
        <img src="<%= blog.coverImageURL %>" 
             class="blog-detail-image" 
             alt="<%= blog.title %>">
      </div>
    
      <div class="blog-content">
        <%= blog.body %>
      </div>
      
    
      <div class="blog-author-section">
        <img src="<%= blog.createdBy?.profileImageURL || '/images/avatar.png' %>" 
             alt="Author" class="author-avatar">
        <div class="author-info">
          <h4><%= blog.createdBy?.fullName || 'Anonymous' %></h4>
          <p>Blog author and content creator</p>
        </div>
      </div>
    </div>

    
    <div class="container">
      <div class="comments-section">
        <h2 class="comments-title">
          <i class="fas fa-comments me-2"></i>
          Comments (<%= comments.length %>)
        </h2>
        
     
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post" class="comment-form">
          <div class="d-flex gap-3">
            <img src="<%= locals.user.profileImageURL || '/images/avatar.png' %>" 
                 alt="Your avatar" class="comment-avatar">
            <div class="flex-grow-1">
              <textarea name="content" 
                        class="form-control" 
                        placeholder="Share your thoughts..."
                        rows="3"
                        required></textarea>
              <div class="d-flex justify-content-end mt-2">
                <button class="btn btn-primary" type="submit">
                  <i class="fas fa-paper-plane me-1"></i>Post Comment
                </button>
              </div>
            </div>
          </div>
        </form>
        <% } else { %>
        <div class="text-center py-4">
          <p class="text-muted">Please <a href="/user/signin" class="text-decoration-none">sign in</a> to leave a comment.</p>
        </div>
        <% } %>
        
       
        <div class="comments-list">
          <% if (comments && comments.length > 0) { %>
            <% comments.forEach(comment => { %>
            <div class="comment">
              <img src="<%= comment.createdBy?.profileImageURL || '/images/avatar.png' %>" 
                   alt="Commenter" class="comment-avatar">
              <div class="comment-content">
                <div class="comment-author">
                  <%= comment.createdBy?.fullName || 'Anonymous' %>
                  <small class="text-muted ms-2">
                    <i class="fas fa-clock me-1"></i>
                    <%= new Date(comment.createdAt).toLocaleDateString() %>
                  </small>
                </div>
                <div class="comment-text"><%= comment.content %></div>
              </div>
            </div>
            <% }) %>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fas fa-comment-slash text-muted mb-3" style="font-size: 2rem;"></i>
              <p class="text-muted">No comments yet. Be the first to share your thoughts!</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
   
    <div class="container py-4">
      <div class="text-center">
        <a href="/" class="btn btn-outline-primary">
          <i class="fas fa-arrow-left me-2"></i>Back to All Blogs
        </a>
      </div>
    </div>

    <%- include('./partials/scripts') %>
    
    <script>
      
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
      
      
      document.querySelector('textarea[name="content"]')?.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
      });
    </script>
  </body>
</html>
