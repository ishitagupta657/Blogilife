<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogilife - Share Your Stories</title>
</head>
<body>
    <%- include('./partials/nav') %>


    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Share Your Stories</h1>
                <p class="hero-subtitle">Discover amazing blogs, share your thoughts, and connect with a community of writers and readers.</p>
                <div class="hero-cta">
                    <% if (locals.user) { %>
                        <a href="/blog/add-new" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-plus me-2"></i>Create New Blog
                        </a>
                    <% } else { %>
                        <a href="/user/signup" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                        <a href="/user/signin" class="btn btn-outline btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="text-gradient">Latest Stories</h2>
                <p class="text-muted">Discover the most recent and engaging content from our community</p>
            </div>
            
            <% if (blogs && blogs.length > 0) { %>
                <div class="blog-grid">
                    <% blogs.forEach(blog => { %>
                        <article class="blog-card">
                            <div class="position-relative">
                                <img src="<%= blog.coverImageURL %>" class="blog-image" alt="<%= blog.title %>">
                                <div class="position-absolute top-0 end-0 m-3">
                                    <span class="badge bg-primary">Featured</span>
                                </div>
                            </div>
                            <!-- <div class="blog-content">
                                <h3 class="blog-title"><%= blog.title %></h3>
                                <div class="blog-meta">
                                    <div class="blog-author">
                                        <img src="<%= blog.createdBy?.profileImageURL || '/images/avatar.png' %>" 
                                             alt="Author" class="author-avatar">
                                        <span><%= blog.createdBy?.fullName || 'Anonymous' %></span>
                                    </div>
                                    <span class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(blog.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <p class="blog-text">
                                    <%= blog.body ? blog.body.substring(0, 150) + '...' : 'No content available' %>
                                </p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">
                                    <i class="fas fa-arrow-right me-1"></i>Read More
                                </a>
                            </div> -->
                            <div class="blog-content">
                                <h3 class="blog-title"><%= blog.title %></h3>
                                <div class="blog-meta">
                                    <div class="blog-author">
                                        <img src="<%= blog.createdBy?.profileImageURL || '/images/avatar.png' %>" 
                                             alt="Author" class="author-avatar">
                                        <span><%= blog.createdBy?.fullName || 'Anonymous' %></span>
                                    </div>
                                    <span class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        <%= new Date(blog.createdAt).toLocaleDateString() %>
                                    </span>
                                </div>
                                <p class="blog-text">
                                    <%= blog.body ? blog.body.substring(0, 150) + '...' : 'No content available' %>
                                </p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary read-more-btn">
                                    <i class="fas fa-arrow-right me-1"></i>
                                    Read More
                                </a>
                            </div>
                             </article>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-blog text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="text-muted">No blogs yet</h3>
                    <p class="text-muted">Be the first to share your story!</p>
                    <% if (locals.user) { %>
                        <a href="/blog/add-new" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create Your First Blog
                        </a>
                    <% } else { %>
                        <a href="/user/signup" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Join Us
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </section>

    
    <section class="py-5 bg-white">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="p-4">
                        <div class="mb-3">
                            <i class="fas fa-edit text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4>Easy Writing</h4>
                        <p class="text-muted">Create beautiful blog posts with our intuitive editor and rich formatting options.</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4">
                        <div class="mb-3">
                            <i class="fas fa-users text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4>Community</h4>
                        <p class="text-muted">Connect with like-minded writers and readers in our vibrant community.</p>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-4">
                        <div class="mb-3">
                            <i class="fas fa-mobile-alt text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h4>Mobile Ready</h4>
                        <p class="text-muted">Write and read on any device with our fully responsive design.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <%- include('./partials/scripts') %>
</body>
</html>
